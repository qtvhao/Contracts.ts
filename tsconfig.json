{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "removeComments": false,
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "paths": {
      "@Domain/*": ["./src/Domain/*"],
      "@Application/*": ["./src/Application/*"],
      "@Infrastructure/*": ["./src/Infrastructure/*"],
      "@Presentation/*": ["./src/Presentation/*"],
      "@Helpers/*": ["./src/Helpers/*"]
    }
  },
  "include": ["src"]
}
